<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ale.proyectofinal.votacion">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lista_candidatos">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerHorizontal="true"
                android:id="@+id/elija"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/cand1"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:background="@drawable/button"
                android:layout_below="@id/elija"
                android:onClick="attemptVoting"/>

            <TextView
                android:id="@+id/nombreCand1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_alignTop="@id/cand1"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"/>

            <TextView
                android:id="@+id/partidoCand1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_below="@id/nombreCand1"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contact"
                android:layout_alignTop="@id/cand1"
                android:layout_alignBottom="@id/cand1"
                android:layout_alignLeft="@id/cand1"
                android:background="@color/material_blue_grey_950"/>

            <Button
                android:id="@+id/cand2"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:background="@drawable/button"
                android:layout_below="@id/cand1"
                android:onClick="attemptVoting"/>

            <TextView
                android:id="@+id/nombreCand2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_alignTop="@id/cand2"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"/>

            <TextView
                android:id="@+id/partidoCand2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_below="@id/nombreCand2"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contact"
                android:layout_alignTop="@id/cand2"
                android:layout_alignBottom="@id/cand2"
                android:layout_alignLeft="@id/cand2"
                android:background="@color/material_blue_grey_950"/>

            <Button
                android:id="@+id/cand3"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:background="@drawable/button"
                android:layout_below="@id/cand2"
                android:onClick="attemptVoting"/>

            <TextView
                android:id="@+id/nombreCand3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_alignTop="@id/cand3"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"/>

            <TextView
                android:id="@+id/partidoCand3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_below="@id/nombreCand3"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contact"
                android:layout_alignTop="@id/cand3"
                android:layout_alignBottom="@id/cand3"
                android:layout_alignLeft="@id/cand3"
                android:background="@color/material_blue_grey_950"/>

            <Button
                android:id="@+id/cand4"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:background="@drawable/button"
                android:layout_below="@id/cand3"
                android:onClick="attemptVoting"/>

            <TextView
                android:id="@+id/nombreCand4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_alignTop="@id/cand4"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"/>

            <TextView
                android:id="@+id/partidoCand4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_below="@id/nombreCand4"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contact"
                android:layout_alignTop="@id/cand4"
                android:layout_alignBottom="@id/cand4"
                android:layout_alignLeft="@id/cand4"
                android:background="@color/material_blue_grey_950"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>